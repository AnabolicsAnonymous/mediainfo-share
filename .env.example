# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# SSL Configuration
SSL_CERT_PATH=./cert.pem
SSL_KEY_PATH=./key.pem
USE_SSL=false

# Upload Configuration
UPLOAD_FOLDER=/srv/mediainfo/static/media
MAX_CONTENT_LENGTH=1048576  # 1MB in bytes
ALLOWED_EXTENSIONS=txt

# Encryption
# Generate these keys using: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=-
ENCRYPTION_KEY=-

# Database
DATABASE_PATH=/srv/mediainfo/mediainfo.db

# Donation Addresses
BTC_ADDRESS=-
ETH_ADDRESS=-
USDC_ADDRESS=-
LTC_ADDRESS=-
